<?xml version="1.0" encoding="UTF-8"?>
<project name="module_scup" default="compile.module.scup">
  <dirname property="module.scup.basedir" file="${ant.file.module_scup}"/>
  
  <property name="module.jdk.home.scup" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.scup" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.scup" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.scup" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="scup.output.dir" value="undefined"/>
  <property name="scup.testoutput.dir" value="undefined"/>
  
  <path id="scup.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="scup.module.production.classpath"/>
  
  <path id="scup.runtime.production.module.classpath"/>
  
  <path id="scup.module.classpath"/>
  
  <path id="scup.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.scup">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.scup">
    <patternset refid="excluded.from.module.scup"/>
  </patternset>
  
  
  <target name="compile.module.scup" depends="compile.module.scup.production,compile.module.scup.tests" description="Compile module Scup"/>
  
  <target name="compile.module.scup.production" depends="register.custom.compilers" description="Compile module Scup; production classes"/>
  
  <target name="compile.module.scup.tests" depends="register.custom.compilers,compile.module.scup.production" description="compile module Scup; test classes" unless="skip.tests"/>
  
  <target name="clean.module.scup" description="cleanup module">
    <delete dir="${scup.output.dir}"/>
    <delete dir="${scup.testoutput.dir}"/>
  </target>
</project>